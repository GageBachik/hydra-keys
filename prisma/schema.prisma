// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Wallet {
  pubkey      String       @id @unique
  authority   String
  acceptSPL   Boolean
  memberships Membership[]
  totalShares Int
}

model Membership {
  memberPubkey   String @id
  memberShipType String
  shareCount     Int

  wallet       Wallet @relation(references: [pubkey], fields: [walletPubkey])
  walletPubkey String
}
