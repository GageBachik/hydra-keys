// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Wallet {
  pubkey      String        @id @unique
  authority   String        
  memberships Membership[]
}

model Membership {
  memberPubkey String  
  walletPubkey String  
  wallet       Wallet @relation(fields: [walletPubkey], references: [pubkey])

  @@id([memberPubkey, walletPubkey])
}
